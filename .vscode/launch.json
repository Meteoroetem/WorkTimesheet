{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET-Mono Debug Android App",
            "type": "mono",
            "preLaunchTask": "runDebugAndroidApp",
            "request": "attach",
            "address": "localhost",
            "port": 10000
        },
        {
            "name": ".NET Debug Desktop App",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/WorkTimesheet.Desktop/WorkTimesheet.Desktop.csproj",
            "launchConfigurationId": "TargetFramework=;WorkTimesheet.Desktop"
        },
        {
            "name": ".NET Debug Browser App",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/WorkTimesheet.Browser/WorkTimesheet.Browser.csproj",
            "launchConfigurationId": "TargetFramework=;WorkTimesheet.Browser",
            "preLaunchTask": "openBrowser"
        }
    ]
}