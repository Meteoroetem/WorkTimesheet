{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch and Debug Standalone Blazor WebAssembly App",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/${workspaceFolderBasename}.Browser",
            
        },
        {
            "name": "Launch and Debug Hosted Blazor WebAssembly App",
            "type": "blazorwasm",
            "request": "launch",
            "hosted": true,
            "program": "${workspaceFolder}/bin/Debug/<target-framework>/<project-name.dll>",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": ".NET Debug Browser App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildBrowserApp",
            "program": "${workspaceFolder}/${workspaceFolderBasename}.Browser/bin/Debug/net8.0-browser/${workspaceFolderBasename}.Browser.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md
            "name": ".NET Debug Desktop App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildDesktopApp",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/${workspaceFolderBasename}.Desktop/bin/Debug/net8.0/${workspaceFolderBasename}.Desktop.dll",
            "args": [],
            "cwd": "${workspaceFolder}/${workspaceFolderBasename}.Desktop",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
			"name": "Mono Debug Android App",
			"type": "mono",
			"preLaunchTask": "runDebugAndroidApp",
			"request": "attach",
      			"address": "localhost",
      			"port": 10000
		}
    ]
}